@if (Model.PageCount>1)
{
<p>
    @if (Model.HasPreviousPage)
    {
        @Ajax.ActionLink("  << Trang đầu  ", "ItemByItemType", new { page = 1, sortOrder = ViewBag.CurrentSortOrder, id = ViewBag.CurrentID }, new AjaxOptions { UpdateTargetId = "main" }, new { @class="navigabun"})
        @Html.Raw("&nbsp;"); 
        @Ajax.ActionLink("  < Trang trước  ", "ItemByItemType", new { page = Model.PageNumber - 1, sortOrder = ViewBag.CurrentSortOrder, id = ViewBag.CurrentID }, new AjaxOptions { UpdateTargetId = "main" }, new { @class="navigabun"})
    }
    else
    {
        @:<a class="navigabun_dia"><< Trang đầu</a>
        @Html.Raw("&nbsp;");
        @:<a class="navigabun_dia">< Trang trước</a>
    }

    &nbsp;&nbsp;
    
    @if (Model.HasNextPage)
    {
        @Ajax.ActionLink("  Trang sau >  ", "ItemByItemType", new { page = Model.PageNumber + 1, sortOrder = ViewBag.CurrentSortOrder, id = ViewBag.CurrentID }, new AjaxOptions { UpdateTargetId = "main" }, new { @class="navigabun"})
        @Html.Raw("&nbsp;");
        @Ajax.ActionLink("  Trang cuối >>  ", "ItemByItemType", new { page = Model.PageCount, sortOrder = ViewBag.CurrentSortOrder, id = ViewBag.CurrentID }, new AjaxOptions { UpdateTargetId = "main" }, new { @class="navigabun"})
    }
    else
    {
        @:<a class="navigabun_dia">Trang sau ></a>
        @Html.Raw("&nbsp;")
        @:<a class="navigabun_dia">Trang cuối >></a>
    }
</p>
}