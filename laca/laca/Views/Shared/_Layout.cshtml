<body class=" cms-index-index cms-home">
    <p id="back-top" style="display: block;">
        <a href="#top">
            <span></span>
        </a>
    </p>
    <div class="wrapper">
        <noscript>
            <div class="noscript">
                <div class="noscript-inner">
                    <p><strong>JavaScript seem to be disabled in your browser.</strong></p>
                    <p>You must have JavaScript enabled in your browser to utilize the functionality of this website.</p>
                </div>
            </div>
        </noscript>
        <div class="page">
            <div class="header-container">
                <div class="header">
                    <h1 class="logo"><strong>lacashop.vn</strong><a href="~/" title="lacashop.vn"><img src="~/Images/logo.png" width="280px" alt="lacashop.vn"></a></h1>
                    <div class="quick-access">
                        <p class="welcome-msg">Chào mừng bạn đến với laca shop!</p>
                        <div class="form-search">
                            <label for="search">Tìm kiếm:</label>
                            <input autocomplete="off" id="search" name="q" class="input-text" type="text" placeholder="Tìm kiếm sản phẩm...">
                            <button title="Tìm kiếm" class="button" value="Tìm kiếm" onclick="search()"><span><span>Tìm kiếm</span></span></button>
                        </div>
                        <script>
                            function search() {
                                //alert("search");
                                var url = "@Href("~/item/search?key=")" + J("#search").val();
                                //alert(url);
                                window.location.href = url;
                            }
                        </script>
                        <ul class="links">

                            <li>
                                <a href="http://www.facebook.com/pages/Lacashop/495701970499055?ref=hl" title="" target="_blank">
                                    <img width="21" height="21" border="0" src="~/images/1371212232_facebook.png">
                                </a>
                            </li>
                            <li>
                                <a href="ymsgr:SendIM?vu_phanuy" title="">
                                    <img width="101" height="21" border="0" src="http://mail.opi.yahoo.com/online?u=vu_phanuy&m=g&t=2">
                                </a>
                            </li>
                            <li>
                                <a href="skype:vu_phanuy?chat" title="">
                                    <img alt="Nick Skype status" src="~/images/skype.png" height="21">
                                </a>
                            </li>

                            @{
                                if (!User.Identity.IsAuthenticated)
                                { <li><a href="~/order/details" title="My Cart" class="top-link-cart">Giỏ hàng</a></li>
                                
                                @Html.Partial("_LoginPartial")}
                                else
                                {<li><a href="~/order" title="My Cart" class="top-link-cart">Giỏ hàng</a></li>
                                
                                @Html.Partial("_LoginPartial")
                                }
                              
                            }
                        </ul>
                        @{
                            var banner = new laca.Models.lacashop_dbEntities().tbl_SystemContent.Find(laca.Models.SytemContent.Banner);
                            if (banner != null && banner.PropertyContent + "" != "")
                            {
                            <div class="banner">
                                <a href="~/ItemByProperties?itemgroup=0&m0_s1_c2_new3_km4_hot5=4">
                                    <img style="height: 75px; width: 500px" src="~/images/@banner.PropertyContent" /></a>
                            </div>
                            }
                        }
                        <div class="hotline"><span>Hot line : Mr Vũ : 0916277261 , Mrs Thư : 0909935540 </span></div>

                    </div>
                    <div class="nav-container">
                        <ul id="nav">
                            <li id="" class="level0 nav-3 level-top">
                                <a href="~/" class="level-top">
                                    <span>Trang chủ</span>
                                </a>
                            </li>
                            @{
                                laca.Models.lacashop_dbEntities db = new laca.Models.lacashop_dbEntities();
                                var itemtype = db.tbl_ItemType.Where(a => a.IsShow).ToList();
                                foreach (var item in itemtype)
                                {
                                <li id="" class="level0 nav-1 level-top first parent">
                                    <a href="~/Item/ItemByItemType/@item.ItemTypeID" class="level-top">
                                        <span>@item.ItemTypeName</span>
                                    </a>
                                    @{
                                    var itemgroup = db.tbl_ItemGroup.Where(a => a.IsShow && a.ItemTypeID == item.ItemTypeID).ToList();
                                    if (itemgroup.Count > 0)
                                    {
                                        <ul class="level0">
                                            @foreach (var group in itemgroup)
                                            {
                                        
                                                <li id="" class="level1 nav-1-1 first">
                                                    <a href="~/Item/ItemByItemGroup/@group.ItemGroupID">
                                                        <span>@group.ItemGroupName</span>
                                                    </a>
                                                </li>

                                            }

                                        </ul>
                                    }
                                    }
                                </li>
                                }
                            }

                        </ul>
                    </div>
                </div>
            </div>

            @*main-container col1-layout<div class="main-container col2-right-layout">*@
            @RenderBody()


            <div class="footer-container">
                <div class="footer">
                    <ul>
                        <li><a href="~/home/systemcontent/1">Giới thiệu</a></li>
                        <li class="last"><a href="~/home/systemcontent/4">Dịch vụ khách hàng</a></li>
