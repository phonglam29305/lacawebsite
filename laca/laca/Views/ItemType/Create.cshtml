@model laca.Models.tbl_ItemType

@{
    ViewBag.Title = "Create";
    Layout = "../shared/_AdminLayout.cshtml";
}

<div class="main-container col2-right-layout">

<h2>Thêm mới</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Loại sản phẩm</legend>

        <div class="editor-label">
            Tên loại sản phẩm
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ItemTypeName)
            @Html.ValidationMessageFor(model => model.ItemTypeName)
        </div>

        <div class="editor-label">
            Mô tả
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            Thứ tự hiển thị
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.OrderID)
            @Html.ValidationMessageFor(model => model.OrderID)
        </div>

        <div class="editor-label">
            Hiển thị
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsShow)
            @Html.ValidationMessageFor(model => model.IsShow)
        </div>

        <p>
            <input type="submit" value="Thêm mới" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Trở về danh sách", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
</div>