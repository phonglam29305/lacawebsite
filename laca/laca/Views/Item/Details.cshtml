                                            <span class="regular-price" id="product-price-42-related">
                                                @if (item.DiscountPrice.Value > 0)
                                                {
                                                    <span class="price">@item.DiscountPrice.Value.ToString("#,###")</span>
                                                }
                                                else
                                                {
