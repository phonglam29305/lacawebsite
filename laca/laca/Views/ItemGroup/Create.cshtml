@model laca.Models.tbl_ItemGroup

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Nhóm sản phẩm</legend>

        <div class="editor-label">
            Tên nhóm sản phẩm
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ItemGroupName)
            @Html.ValidationMessageFor(model => model.ItemGroupName)
        </div>

        <div class="editor-label">
            Mô tả
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        
        <div class="editor-label">
            Loại sản phẩm
        </div>
        <div class="editor-field">
            @Html.DropDownList("ItemTypeID", String.Empty)
            @Html.ValidationMessageFor(model => model.ItemTypeID)
        </div>
        
        <div class="editor-label">
            Thư tự hiển thị
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.OrderID)
            @Html.ValidationMessageFor(model => model.OrderID)
        </div>

        <div class="editor-label">
            Hiển thị
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsShow)
            @Html.ValidationMessageFor(model => model.IsShow)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
