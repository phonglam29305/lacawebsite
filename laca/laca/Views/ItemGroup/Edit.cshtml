@model laca.Models.tbl_ItemGroup

@{
    ViewBag.Title = "Edit";
    Layout = "../shared/_AdminLayout.cshtml";
}

<div class="main-container col2-right-layout">
    <h2>Edit</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ItemGroupID)
        <fieldset>
            <legend>Nhóm sản phẩm</legend>

            <div class="editor-label">
                Tên nhóm sản phẩm
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.ItemGroupName)
                @Html.ValidationMessageFor(model => model.ItemGroupName)
            </div>

            <div class="editor-label">
                Mô tả
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>

            <div class="editor-label">
                Thứ tự hiển thị
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.OrderID)
                @Html.ValidationMessageFor(model => model.OrderID)
            </div>

            <div class="editor-label">
                Loại sản phẩm
            </div>
            <div class="editor-field">
                @Html.DropDownList("ItemTypeID", String.Empty)
                @Html.ValidationMessageFor(model => model.ItemTypeID)
            </div>

            <div class="editor-label">
                Hiển thị
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.IsShow)
                @Html.ValidationMessageFor(model => model.IsShow)
            </div>

            <p>
                <input type="submit" value="Save" />
            </p>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Trở về danh sách", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>
